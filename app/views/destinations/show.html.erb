<h1><%=@destination.city%></h1>
<h2><%=@destination.country%></h2>
<h3><%=@destination.tagline%></h3>
<p><%=@destination.summary%></p>

<h4>Category</h4>
<ul>
  <%@destination.categories.each do |cat| %>
  <li><%=cat.name%> </li>
  <%end%>
</ul>

<h4>Comments</h4>
<ul>
  <%@destination.trips.each do |trip| %>
  <li><%=trip.comment%> | <%=link_to trip.user.username, user_path(trip.user)%> </li>
  <%end%>
</ul>

<div class="place_container">
<h4>Hotels</h4>
<ul>
  <%@destination.places.each do |place| %>
   <% if place.place_type == "hotel" %>
  <li><%=link_to place.name, place%></li>
    <% end %>
  <%end%>
</ul>
</div>

<div class="row">

<div class="place_container">
<h4>Restaurants</h4>
<ul>
  <%@destination.places.each do |place| %>
   <% if place.place_type == "restaurant" %>
  <li><%=link_to place.name, place%></li>
    <% end %>
  <%end%>
</ul>
</div>

<div class="place_container">
<h4>Attractions</h4>
<ul>
  <%@destination.places.each do |place| %>
   <% if place.place_type == "attraction" %>
  <li><%=link_to place.name, place%></li>
    <% end %>
  <%end%>
</ul>
</div>
</div>

<h4><%=link_to "Add New Place", new_place_path%></h4>
